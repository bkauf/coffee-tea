doctype html
- var path = title;
html
  head
    link(href='/'+path+'/stylesheets/style.css', rel='stylesheet')
    script(src='/'+path+'/javascripts/jquery-3.2.1.min.js')
    script(src='/'+path+'/javascripts/script.js')
    title From: Test #{container}
  body
    #wrapper
      #header
        #header-right
          img(src='/'+path+'/images/cloud-logo.svg')
        #header-left
          h1= path
          h2  #{container}

      #main
        #action
          div#status
        #menu
          ul

            li
              a(href='#health').health Get Health

            li
              a(href='#kill').kill Kill Container
          br
        #body
          div

          img(src='/'+path+'/images/'+path+'.jpg')
          div
            a(href='https://github.com/bkauf/coffee-tea') Source on Github
            p Commit: #{commitID}
            p Build: #{buildID}
